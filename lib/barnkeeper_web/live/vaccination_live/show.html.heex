<div class="container mx-auto px-4 sm:px-6 lg:px-8 py-4 sm:py-6 lg:py-8">
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between mb-6 sm:mb-8">
    <div class="mb-4 sm:mb-0">
      <nav class="flex mb-4" aria-label="Breadcrumb">
        <ol role="list" class="flex items-center space-x-4">
          <li>
            <.link navigate={~p"/vaccinations"} class="text-gray-400 hover:text-gray-500">
              <span class="text-sm font-medium">Vaccinations</span>
            </.link>
          </li>
          <li>
            <div class="flex items-center">
              <svg
                class="flex-shrink-0 h-5 w-5 text-gray-300"
                xmlns="http://www.w3.org/2000/svg"
                fill="currentColor"
                viewBox="0 0 20 20"
                aria-hidden="true"
              >
                <path d="M5.555 17.776l8-16 .894.448-8 16-.894-.448z" />
              </svg>
              <span class="ml-4 text-sm font-medium text-gray-500">
                {@vaccination.vaccine_name} - {@vaccination.vaccination_date}
              </span>
            </div>
          </li>
        </ol>
      </nav>
      <h1 class="text-2xl sm:text-3xl lg:text-4xl font-bold text-gray-900 mb-2">
        Vaccination Details
      </h1>
      <p class="text-sm sm:text-base text-gray-600">
        {@vaccination.vaccine_name} vaccination on {@vaccination.vaccination_date}
      </p>
    </div>
    <div class="w-full sm:w-auto">
      <.link
        patch={~p"/vaccinations/#{@vaccination.id}/show/edit"}
        class="btn btn-primary w-full sm:w-auto"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="h-4 w-4 sm:h-5 sm:w-5 mr-2"
          fill="none"
          viewBox="0 0 24 24"
          stroke="currentColor"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"
          />
        </svg>
        Edit Vaccination
      </.link>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Basic Information -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body">
          <h2 class="card-title text-xl mb-4">Basic Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-500">Horse</label>
              <p class="text-lg font-semibold">{@vaccination.horse.name}</p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Vaccine</label>
              <p class="text-lg">
                <span class="badge badge-primary">
                  {@vaccination.vaccine_name}
                </span>
              </p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Vaccination Date</label>
              <p class="text-lg">{@vaccination.vaccination_date}</p>
            </div>
            <%= if @vaccination.next_due_date do %>
              <div>
                <label class="text-sm font-medium text-gray-500">Next Due Date</label>
                <p class="text-lg">{@vaccination.next_due_date}</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
<!-- Veterinarian Information -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body">
          <h2 class="card-title text-xl mb-4">Veterinarian Information</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <label class="text-sm font-medium text-gray-500">Veterinarian Name</label>
              <p class="text-lg">{@vaccination.veterinarian_name}</p>
            </div>
            <%= if @vaccination.veterinarian_phone do %>
              <div>
                <label class="text-sm font-medium text-gray-500">Phone Number</label>
                <p class="text-lg">
                  <a href={"tel:#{@vaccination.veterinarian_phone}"} class="link link-primary">
                    {@vaccination.veterinarian_phone}
                  </a>
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
<!-- Vaccine Details -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body">
          <h2 class="card-title text-xl mb-4">Vaccine Details</h2>
          <div class="space-y-4">
            <%= if @vaccination.batch_number do %>
              <div>
                <label class="text-sm font-medium text-gray-500">Batch Number</label>
                <p class="text-base mt-1">{@vaccination.batch_number}</p>
              </div>
            <% end %>

            <%= if @vaccination.expiration_date do %>
              <div>
                <label class="text-sm font-medium text-gray-500">Expiration Date</label>
                <p class="text-base mt-1">{@vaccination.expiration_date}</p>
              </div>
            <% end %>

            <%= if @vaccination.notes do %>
              <div>
                <label class="text-sm font-medium text-gray-500">Notes</label>
                <p class="text-base mt-1 whitespace-pre-wrap">{@vaccination.notes}</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
<!-- Sidebar -->
    <div class="space-y-6">
      <!-- Cost Information -->
      <%= if @vaccination.cost do %>
        <div class="card bg-base-100 shadow-lg">
          <div class="card-body">
            <h3 class="card-title text-lg mb-2">Cost</h3>
            <div class="text-2xl font-bold text-primary">${@vaccination.cost}</div>
          </div>
        </div>
      <% end %>
      
<!-- Record Information -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body">
          <h3 class="card-title text-lg mb-2">Record Information</h3>
          <div class="space-y-2">
            <div>
              <label class="text-sm font-medium text-gray-500">Recorded By</label>
              <p class="text-sm">{@vaccination.recorded_by.email}</p>
            </div>
            <div>
              <label class="text-sm font-medium text-gray-500">Created</label>
              <p class="text-sm">
                {Calendar.strftime(@vaccination.inserted_at, "%B %d, %Y at %I:%M %p")}
              </p>
            </div>
            <%= if @vaccination.inserted_at != @vaccination.updated_at do %>
              <div>
                <label class="text-sm font-medium text-gray-500">Last Updated</label>
                <p class="text-sm">
                  {Calendar.strftime(@vaccination.updated_at, "%B %d, %Y at %I:%M %p")}
                </p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      
<!-- Quick Actions -->
      <div class="card bg-base-100 shadow-lg">
        <div class="card-body">
          <h3 class="card-title text-lg mb-4">Quick Actions</h3>
          <div class="space-y-2">
            <.link
              navigate={~p"/horses/#{@vaccination.horse.id}"}
              class="btn btn-outline btn-sm w-full"
            >
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"
                />
              </svg>
              View Horse
            </.link>
            <.link patch={~p"/vaccinations/new"} class="btn btn-outline btn-sm w-full">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="h-4 w-4 mr-2"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor"
              >
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M12 6v6m0 0v6m0-6h6m-6 0H6"
                />
              </svg>
              New Vaccination
            </.link>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<.modal
  :if={@live_action == :edit}
  id="vaccination-modal"
  show
  on_cancel={JS.patch(~p"/vaccinations/#{@vaccination.id}")}
>
  <.live_component
    module={BarnkeeperWeb.VaccinationLive.FormComponent}
    id={@vaccination.id}
    title="Edit Vaccination"
    action={@live_action}
    vaccination={@vaccination}
    team_id={@team.id}
    horses={@horses}
    current_user_id={@current_user.id}
    patch={~p"/vaccinations/#{@vaccination.id}"}
  />
</.modal>
